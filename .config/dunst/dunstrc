    height = (0,600)
    horizontal_padding = 16

    monitor = 0
    follow = none

    indicate_hidden = yes
    sort = yes
    idle_threshold = 120

    ### Text ###

    font = HackNerdFont, Monospace
    markup = full
    format = "%a\n<b>%s</b>\n%b"
    show_indicators = false

    ### Icons ###

    icon_position = left
    enable_recursive_icon_lookup = true
    icon_theme = breeze-dark
    min_icon_size = 64

    ### Corners ###

    corners = all       
    corner_radius = 10
    
    ### Gaps ###

    gap_size = 5

    ### Misc/Advanced ###

    dmenu = /usr/bin/rofi -dmenu -p dunst:
    browser = /usr/bin/firefox -new-tab
    ignore_dbusclose = true

