# System Commands
#alias off='sudo shutdown now'
alias reboot='sudo reboot'

# Audio 
alias volup='amixer -D pulse sset Master 5%+'
alias voldown='amixer -D pulse sset Master 5%-'

# Screen layouts
alias desk='bash $HOME/.screenlayout/desk.sh'
alias deskvert='bash $HOME/.screenlayout/desk_vert.sh'
alias laptop='bash $HOME/.screenlayout/laptop.sh'

# PhD envs and aliases
export PHD_HOME=$HOME/repos/phd
export PAPERS=$PHD_HOME/papers
alias phd='cd $PHD_HOME'
alias papers='cd $PAPERS'
alias tracer='cd $PHD_HOME/tracer'
alias neotracer='cd $PHD_HOME/neoTracer'
alias tracerdev='tracer && pipenv shell --fancy'
alias rtm='cd $PHD_HOME/tracer_rtm'
alias ui='cd $PHD_HOME/tracer_ui'
alias tracerup='bash $PHD_HOME/tracerdevops/azure/startAll.sh'
alias stormup='bash $PHD_HOME/tracerdevops/azure/startCluster.sh'
alias genup='bash $PHD_HOME/tracerdevops/azure/startGenerator.sh'
alias tracerdown='bash $PHD_HOME/tracerdevops/azure/stopCluster.sh'
alias tracerlist='azure vm list TNCStorm'
alias tracerip='python $PHD_HOME/tracerdevops/azure/tracerip.py'
alias tdbup='azure vm start TNCStorm TNC-Tracer'
alias off='bash $PHD_HOME/tracerdevops/azure/traceroff.sh'
alias phdbackup='tar -zcvf phdbackup.tar.gz $PHD_HOME'
alias wtasks='task pro:phd'

# Tracer Influx DB command line
alias tracerdb="influx -host tracer.ukwest.cloudapp.azure.com -port 8086 -username 'tom' -password 'bigdata'"

# Tracer Neo4J DB command line
alias tracergraph="export TERM=xterm-color && cypher-shell -a tracer.ukwest.cloudapp.azure.com -u neo4j -p neo4j"
alias neodev="docker run --publish=7474:7474 --publish=7687:7687 --env=NEO4J_AUTH=none neo4j"

# Pipenv commands
alias per="pipenv run"
alias perp="pipenv run python"
alias pein="pipenv install"
alias peupg="pipenv update"
alias pipython="pipenv run ipython"
alias pvim="pipenv run vim"

# Command line search options (requires ddgr and googler to be installed)
alias ddg="ddgr -r 'uk-en' -n 5"
